[
  {
    "name": "theme_info",
    "theme_name": "TCG Vaults",
    "theme_version": "1.0.0",
    "theme_author": "TCG Vaults Team",
    "theme_documentation_url": "https://tcgvaults.com/docs",
    "theme_support_url": "https://tcgvaults.com/support"
  },
  {
    "name": "Logo & Branding",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image",
        "info": "Recommended size: 300x100px"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 100,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo Max Width",
        "default": 150
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Recommended size: 32x32px"
      }
    ]
  },
  {
    "name": "Colors & Gradients",
    "settings": [
      {
        "type": "header",
        "content": "Primary Gradient"
      },
      {
        "type": "color",
        "id": "gradient_background_1",
        "label": "Gradient Color 1",
        "default": "#3B82F6"
      },
      {
        "type": "color",
        "id": "gradient_background_2",
        "label": "Gradient Color 2",
        "default": "#9333EA"
      },
      {
        "type": "header",
        "content": "Accent Gradient"
      },
      {
        "type": "color",
        "id": "gradient_accent_1",
        "label": "Accent Color 1",
        "default": "#60A5FA"
      },
      {
        "type": "color",
        "id": "gradient_accent_2",
        "label": "Accent Color 2",
        "default": "#A855F7"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Primary Text",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_text_secondary",
        "label": "Secondary Text",
        "default": "#9CA3AF"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "inter_n4",
        "label": "Heading Font",
        "info": "Used for headings and titles"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Body Font",
        "info": "Used for body text and navigation"
      },
      {
        "type": "range",
        "id": "font_body_scale",
        "min": 1.0,
        "max": 1.3,
        "step": 0.1,
        "label": "Body Font Size Scale",
        "default": 1.0
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "page_width",
        "label": "Page Width",
        "default": "1200",
        "options": [
          {
            "value": "1000",
            "label": "1000px"
          },
          {
            "value": "1200",
            "label": "1200px"
          },
          {
            "value": "1400",
            "label": "1400px"
          },
          {
            "value": "1600",
            "label": "1600px"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "enable_sticky_header",
        "label": "Enable Sticky Header",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Media Links"
      },
      {
        "type": "url",
        "id": "social_twitter_link",
        "label": "Twitter/X URL"
      },
      {
        "type": "url",
        "id": "social_instagram_link",
        "label": "Instagram URL"
      },
      {
        "type": "url",
        "id": "social_facebook_link",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "social_youtube_link",
        "label": "YouTube URL"
      },
      {
        "type": "url",
        "id": "social_tiktok_link",
        "label": "TikTok URL"
      },
      {
        "type": "url",
        "id": "social_discord_link",
        "label": "Discord URL"
      }
    ]
  },
  {
    "name": "Product Display",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show Product Vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_product_rating",
        "label": "Show Product Ratings",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_product_zoom",
        "label": "Enable Product Image Zoom",
        "default": true
      },
      {
        "type": "select",
        "id": "products_per_row_desktop",
        "label": "Products Per Row (Desktop)",
        "default": "4",
        "options": [
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          }
        ]
      },
      {
        "type": "select",
        "id": "products_per_row_mobile",
        "label": "Products Per Row (Mobile)",
        "default": "1",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          }
        ]
      }
    ]
  },
  {
    "name": "Cart & Checkout",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart Type",
        "default": "drawer",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "enable_cart_notes",
        "label": "Enable Cart Notes",
        "default": true
      },
      {
        "type": "text",
        "id": "free_shipping_threshold",
        "label": "Free Shipping Threshold (in cents)",
        "default": "10000",
        "info": "Enter amount in cents (e.g., 10000 = $100)"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable Predictive Search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_vendor",
        "label": "Show Vendor in Search Results",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "search_show_price",
        "label": "Show Price in Search Results",
        "default": true
      }
    ]
  },
  {
    "name": "SEO & Performance",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Enable Lazy Loading for Images",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_webp",
        "label": "Enable WebP Image Format",
        "default": true
      },
      {
        "type": "textarea",
        "id": "custom_css",
        "label": "Custom CSS",
        "info": "Add custom CSS to override theme styles"
      },
      {
        "type": "html",
        "id": "custom_head_code",
        "label": "Custom Head Code",
        "info": "Add custom code to the <head> section"
      }
    ]
  },
  {
    "name": "Advanced",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "Enable Animations",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_preloader",
        "label": "Enable Page Preloader",
        "default": false
      },
      {
        "type": "select",
        "id": "currency_format",
        "label": "Currency Format",
        "default": "money",
        "options": [
          {
            "value": "money",
            "label": "$10.00"
          },
          {
            "value": "money_without_trailing_zeros",
            "label": "$10"
          },
          {
            "value": "money_with_currency",
            "label": "$10.00 USD"
          }
        ]
      }
    ]
  }
]
